var search_elem = jQuery("[name=${ widget.survey_species_search_name }]");
search_elem.data("surveyId", ${ widget.survey.id }); 
search_elem.autocomplete({
    source: bdrs.contribute.getAutocompleteSourceFcn(true),
    select: function(event, ui) {
        var taxon = ui.item.data;
        jQuery("[name=${ widget.widget_name }]").val(taxon.id).blur();
    },
    change: function(event, ui) {
        if(ui.item === null) {
            jQuery("[name=${ widget.widget_name }]").val('').blur();
        }
    },
    html: true,
    minLength: 2,
    delay: 300
});
